<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:gravity="right">
		<TextView android:id="@+id/word_count" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="0"
			android:textSize="23dp" />
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="/"
			android:textSize="23dp" />
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="140"
			android:textSize="23dp" />
	</LinearLayout>
	<EditText android:id="@+id/message" android:layout_width="fill_parent"
		android:layout_height="150dp" android:gravity="top" android:maxLength="140" />
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<Button android:id="@+id/show_keyboard" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="키보드 보여주기" />
		<Button android:id="@+id/hide_keyboard" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="키보드 숨기기" />
	</LinearLayout>
</LinearLayout>