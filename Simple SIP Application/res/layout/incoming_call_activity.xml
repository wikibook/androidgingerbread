<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:gravity="center_horizontal|center_vertical"
	android:orientation="vertical">
	<ImageView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:src="@drawable/call" />
	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="Call is coming !!" />
	<Button android:id="@+id/receive_call" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="전화받기" />
</LinearLayout>