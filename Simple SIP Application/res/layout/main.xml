<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="SIP 아이디"
			android:paddingLeft="12dp" android:paddingRight="12dp" />
		<EditText android:id="@+id/sip_id" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:paddingLeft="12dp"
			android:paddingRight="12dp" android:text="" />
	</LinearLayout>
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="SIP 비밀번호"
			android:paddingLeft="12dp" android:paddingRight="12dp" />
		<EditText android:id="@+id/sip_pass" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:paddingLeft="12dp"
			android:paddingRight="12dp" android:text="" />
	</LinearLayout>
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="SIP 도메인"
			android:paddingLeft="12dp" android:paddingRight="12dp" />
		<EditText android:id="@+id/sip_domain" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:paddingLeft="12dp"
			android:paddingRight="12dp" android:text="" />
	</LinearLayout>
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="상대방 SIP 아이디"
			android:paddingLeft="12dp" android:paddingRight="12dp" />
		<EditText android:id="@+id/to_sip_id" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:paddingLeft="12dp"
			android:paddingRight="12dp" />
	</LinearLayout>
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<Button android:id="@+id/connect_to_sip_server"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_weight="1" android:text="SIP 서버에 접속하기" />
		<Button android:id="@+id/start_call_button"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_weight="1" android:text="전화걸기" />
	</LinearLayout>
</LinearLayout>