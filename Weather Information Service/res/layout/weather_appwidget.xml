<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:background="@drawable/weather_widget_background"
	android:padding="8dp" android:orientation="horizontal">
	<ImageView android:id="@+id/weather_icon"
		android:layout_width="45dp" android:layout_height="45dp" android:src="@drawable/nb01" />
	<TextView android:id="@+id/area" android:paddingLeft="15dp"
		android:paddingRight="5dp" android:paddingTop="5dp"
		android:paddingBottom="5dp" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="서울"
		android:textColor="#000000" android:textSize="16dp" />
	<TextView android:paddingLeft="5dp" android:paddingRight="5dp"
		android:paddingTop="5dp" android:paddingBottom="5dp"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:text="/" android:textColor="#000000" android:textSize="16dp" />
	<TextView android:id="@+id/date" android:paddingLeft="5dp"
		android:paddingRight="5dp" android:paddingTop="5dp"
		android:paddingBottom="5dp" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="2010-01-01"
		android:textColor="#000000" android:textSize="16dp" />
</LinearLayout>
